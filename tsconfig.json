{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@rte-editor/core": ["packages/core/src"],
      "@rte-editor/react": ["packages/react/src"],
      "@rte-editor/themes": ["packages/themes/src"],
      "@rte-editor/plugins": ["packages/plugins"],
      "@rte-editor/plugins/*": ["packages/plugins/*/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/plugins/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}