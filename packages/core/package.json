{
  "name": "@editora/core",
  "version": "1.0.0",
  "description": "Framework-agnostic core editor engine for Editora Rich Text Editor",
  "author": "Ajay Kumar <ajaykr089@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ajaykr089/Rich-Text-Editor.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/ajaykr089/Rich-Text-Editor#readme",
  "bugs": {
    "url": "https://github.com/ajaykr089/Rich-Text-Editor/issues"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "contenteditable",
    "prosemirror",
    "framework-agnostic",
    "typescript"
