{
  "name": "@editora/ui-core",
  "version": "0.1.0",
  "description": "Editora UI core: lightweight web components and reactivity",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build:tsc": "tsc -p . --emitDeclarationOnly --outDir dist",
    "build": "vite build && npm run build:tsc",
    "test": "vitest",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "vitest": "^1.0.0",
    "jsdom": "^22.1.0",
    "vite": "^7.3.1",
    "typescript": "^5.0.0"
  },
  "publishConfig": { "access": "public" },
  "keywords": ["editora","ui","web-components","reactivity"],
  "license": "MIT",
  "sideEffects": true
}
